RewriteEngine On

# 1. Menghilangkan .php dari URL secara otomatis
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# 2. Opsional: Redirect dari file.php ke /file (Clean URL)
# Jika user mengakses /index.php secara manual, redirect ke /index
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R,L]

# 3. Mencegah akses ke folder sensitif
Options -Indexes

# 4. Melindungi file .env atau config (tambahan keamanan)
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>
